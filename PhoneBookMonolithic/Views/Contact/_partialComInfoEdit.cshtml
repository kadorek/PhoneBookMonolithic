@model Tuple<int,CommunicationInfo>

<div class="row divComInfo" data-index="@Model.Item1">
    <div class="row">
        <div class="col-md-4 form-group">
            <label class="control-label" for="CommuncationInfos_@(Model.Item1)__InfoType">InfoType</label>
            <select data-val="true" data-val-required="The InfoType field is required." id="CommuncationInfos_@(Model.Item1)__InfoType" name="CommuncationInfos[@(Model.Item1)].InfoType" @*asp-items="Html.GetEnumSelectList<PhoneBookMonolithic.Models.CommunicationInfoType>()"*@>
                <option> Bilgi Türünü Seçiniz</option>

                @foreach (var infoType in Enum.GetNames(typeof(PhoneBookMonolithic.Models.CommunicationInfoType)))
                {
                    if (infoType == Model.Item2.InfoType.ToString())
                    {
                        <option value="@infoType" selected>@infoType</option>
                    }
                    else
                    {
                        <option value="@infoType">@infoType</option>
                    }
                }

            </select>
        </div>
        <div class="col-md-6 form-group">
            <label class="control-label" for="CommuncationInfos_@(Model.Item1)__Value">Value</label>
            <input class="form-control" type="text" id="CommuncationInfos_@(Model.Item1)__Value" name="CommuncationInfos[@(Model.Item1)].Value" value="@Model.Item2.Value">
            <span class="text-danger field-validation-valid" data-valmsg-for="CommuncationInfos[@(Model.Item1)].Value" data-valmsg-replace="true"></span>
        </div>
        <div class="col-md-2">
            <button type="button" class="close" data-index="@Model.Item1" data-clear="1" aria-label="Close" onclick="RemoveInfo(this)">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>

