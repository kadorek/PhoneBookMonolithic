@model Tuple<int,CommunicationInfo>

<div class="row divComInfo" data-index="@(Model.Item1)">
    <div class="row">
        <div class="col-md-4 form-group">
            <label class="control-label" for="CommuncationInfos_@(Model.Item1)__InfoType">InfoType</label>
            <select  data-index="@(Model.Item1)" data-val="true" data-val-required="The InfoType field is required." id="CommuncationInfos_@(Model.Item1)__InfoType" name="CommuncationInfos[@(Model.Item1)].InfoType" onchange="ProperInputSet(this)">
                <option> Bilgi Türünü Seçiniz</option>
                @foreach (var item in Html.GetEnumSelectList<PhoneBookMonolithic.Models.CommunicationInfoType>())
                {

                    if (((int)Model.Item2.InfoType).ToString() == item.Value)
                    {
                        <option selected="selected" value="@(item.Value)">@(item.Text)</option>
                    }
                    else { 
                        <option  value="@(item.Value)">@(item.Text)</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6 form-group divData">

            @await Component.InvokeAsync("InputComponent",new{count=Model.Item1,data=Model.Item2.Value,tip=Model.Item2.InfoType})


           @* <label class="control-label" for="CommuncationInfos_@(Model)__Value">Value</label>
            <input class="form-control" type="text" id="CommuncationInfos_@(Model)__Value" name="CommuncationInfos[@(Model)].Value" value="">
            <span class="text-danger field-validation-valid" data-valmsg-for="CommuncationInfos[@(Model)].Value" data-valmsg-replace="true"></span>*@
        </div>
        <div class="col-md-2">
            <button type="button" class="close" data-index="@Model.Item1" aria-label="Close" onclick="RemoveInfo(this)">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>